@model IEnumerable<MaintainMe.Models.CarListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Vehicles</h2>
<h3>Vehicles must be added through the Customer index</h3>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Customer.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CarMake)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CarModel)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CustomerLastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CarMake)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CarModel)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.CarId, item.CustomerId }) |
            @Html.ActionLink("Details", "Details", new { id = item.CarId, item.CustomerId }) |
            @Html.ActionLink("Add a New WorkOrder", "Create", "WorkOrder", new { id = item.CarId, item.CustomerId }, null) |
            @Html.ActionLink("Delete", "Delete", new { id = item.CarId, item.CustomerId })
        </td>
    </tr>
}

</table>
